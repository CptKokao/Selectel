  font-family "GothamPro", "Arial", sans-serif
  font-size 16px
  color font-color

  margin 0 auto

a
  text-decoration: none
  &:hover
    opacity 0.8

.btn
  display inline-block
  padding 8px 0
  border-radius: 6px;
  text-align center
  color #ffffff
  font-family: "GothamPro", "Arial", sans-serif
  font-weight: 500;
  font-size: 14px;
  letter-spacing 0.5px
  cursor pointer
  +sm-block()
    font-size: 10px;
    line-height: 24px;
    padding: 1px 0;

.wrapper
  wrapper()
  // outline: 1px solid orange

.wrapper-full
  wrapper-full()
  outline: 1px solid pink

.degub-grid
   debug(rgba(0, 0, 0, 0.5), 1px solid #ff0)

.logo
  width 112px
  height 24px
  +md-block()
    width 82px
    height 18px
  +sm-block()
    size(2)
    width 52px
    height 11px

.loader
  width 70px
  margin: 60px auto;

.error
  margin-top 70px
  text-align: center;
  color: #e84e1b

.hidden
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  border: 0;
  padding: 0;
  white-space: nowrap;
  clip-path: inset(100%);
  clip: rect(0 0 0 0);
  overflow: hidden;


