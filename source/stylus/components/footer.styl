.footer
  width 100%
  margin-top: 65px;
  padding-top 40px
  padding-bottom 20px
  box-shadow: 0px -4px 3px rgba(0, 0, 0, 0.1);

  +md-block()
    padding-top 28px
  +sm-block()
    padding-top 20px

.footer__wrap
  row-flex()

.footer__logo
  col()
  size(1)

  +sm-block()
    size(1.3)


.footer__social
  margin-top 28px

  ul
    display flex
    flex-wrap: wrap
    justify-content: space-between

    +sm-block()
      justify-content: flex-start

  li
    width 25%

    +sm-block()
      width 35%
      margin-bottom 5px   
  
    svg
      +md-block()
        width 16px
        height 16px

.footer__nav
  col()
  size(4)

  +sm-block()
    size(3.7)

  ul
    display flex
    flex-wrap: wrap

  li
    width: 25%;
    padding-left: 15px;
    margin-bottom: 18px;

    +md-block()
      padding-left 0
    +sm-block()
      width 50%


    &:nth-of-type(4n)
      margin-left 0
    
    a
      font-family: "Museo Sans Cyrl", "Arial", sans-serif
      font-size: 14px
      line-height: 17px
      letter-spacing: 0.5px;
      color: #8391B2;

      +md-block()
        font-size: 12px;
        line-height: 14px;

