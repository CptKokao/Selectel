.result
  margin-top 80px
  +sm-block()
    margin-top 27px
  
  h3
    font-size 18px
    line-height 22px
    +sm-block()
      font-size 14px
      line-height 17px

.result__wrap
  row-flex()
  margin-top 30px
  +sm-block()
    margin-top 20px  

.result__block,
.result__error
  col()
  size(5)
  display flex
  min-height: 138px
  padding 25px 10px 10px
  margin-bottom 12px
  border: 1px solid #8391B2
  border-radius: 7px;
  font-size: 14px;
  +sm-block()
    flex-direction: column
    min-height 234px
    padding-top 15px
    font-size 12px

.result__error
  color #e84e1b;
  border: 1px solid #e84e1b;

.result__item
  width 20%
  padding-top 35px
  text-align: center

  +sm-block()
    width 100%
    padding-top 25px
    text-align: left

.result__item--cpu
  padding-top 0
  text-align: left
  span
    display block
  p
    font-weight: bold;
    margin-bottom: 17px
  +sm-block()
    span
      display inline

.result__item--price
  p
    font-weight: bold;

.result__btn
  width: 76px;
  margin-top 12px
  padding 5px 0
  color: #2F93FE
  background #FFF
  border: 1px solid #2F93FE
  font-size: 10px;
  outline: none
  &:hover
    background #B3D8FF
    border 1px solid font-color
    color font-color
  &:active
    background #71B6FF
  &:disabled
    border 1px solid #C8C8C8
    color #C8C8C8
  +sm-block()
    margin-top 20px
    padding 0
    width 105px
