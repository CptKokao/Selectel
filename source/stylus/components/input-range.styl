input[type="range"]
  &::-webkit-slider-thumb 
    appearance none
    height 14px
    width 14px
    margin-top -6px
    border-radius 50%
    background #fff
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18);
    cursor pointer

  &::-moz-range-thumb
    height 14px
    width 14px
    margin-top -6px
    border-radius 50%
    background #fff
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18);
    cursor pointer

  &::-ms-thumb
    height 14px
    width 14px
    margin-top -1px
    border-radius 50%
    border none
    background #fff
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18);
    cursor pointer

  &::-webkit-slider-runnable-track
    width 100%
    height 3px
    cursor pointer
    background #E5E5E5
    border-radius 25px

  &::-moz-range-track
    width 100%
    height 3px
    cursor pointer
    background #E5E5E5
    border-radius 25px

  &::-ms-track
    width 100%
    height 3px
    cursor pointer
    border-radius 25px
    background transparent
    border-color transparent
    border-width 16px 0
    color transparent

  &::-ms-fill-lower,
  &::-ms-fill-upper
    background #2a6495
    border 1px solid #E5E5E5
    border-radius 25px
